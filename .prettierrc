{
    "trailingComma": "es5",
    "semi": true,
    "tabWidth": 4,
    "plugins": ["prettier-plugin-svelte"],
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "parser": "yaml",
                "tabWidth": 2
            }
        },
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte",
                "tabWidth": 2
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}
